{
  "gltfExtensionName": "MOZ_hubs_components",
  "gltfExtensionVersion": 3,
  "components": {
    "kit": {
      "scene": true,
      "node": false,
      "properties": {
        "authorName": {
          "type": "string"
        },
        "authorUrl": {
          "type": "string"
        },
        "license": {
          "type": "string"
        }
      }
    },
    "kit-piece": {
      "properties": {
        "id": {
          "type": "string",
          "default": "$name"
        },
        "name": {
          "type": "string",
          "default": "$name"
        },
        "tags": {
          "type": "collections",
          "collectionPrefix": "KIT_"
        }
      }
    },
    "kit-alt-materials": {
      "material": true,
      "node": false,
      "properties": {
        "materials": {
          "type": "array",
          "arrayType": "material"
        }
      }
    },
    "loop-animation": {
      "properties": {
        "clip": {
	  "type": "string"
	},
	"paused": {
          "type": "bool",
	  "default": true
	}
      }
    },
    "scale-audio-feedback": {
      "properties": {
        "minScale": {
	  "type": "float",
	  "default": 1.0
	},
	"maxScale": {
	  "type": "float",
	  "default": 1.5
	}
      }
    },
    "morph-audio-feedback": {
      "properties": {
        "name": {
	  "type": "string"
	},
	"minValue": {
	  "type": "float",
	  "default": 0.0
	},
	"maxValue": {
	  "type": "float",
	  "default": 1.0
	}
      }
    }
  }
}
